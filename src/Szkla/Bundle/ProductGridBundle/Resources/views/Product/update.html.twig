{# src/Szkla/Bundle/ProductGridBundle/SzklaProductGridBundle/Resources/views/Product/update.html.twig #}
{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with 'OroFormBundle:Form:fields.html.twig' %}

{% if form.vars.value.id %}
    {% set formAction = path('szkla_products.product_update', { 'id': form.vars.value.id }) %}
{% else %}
    {% set formAction = path('szkla_products.product_create') %}
{% endif %}

{% block navButtons %}
    {% if form.vars.value.id and resource_granted('DELETE', form.vars.value) %}
        {{ UI.deleteButton({
            'dataUrl': path('szkla_products_api_delete_product', {'id': form.vars.value.id}),
            'dataRedirect': path('szkla_products.products_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-tag',
            'dataId': form.vars.value.id,
            'entity_label': 'Product'|trans
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.cancelButton(path('szkla_products.products_index')) }}
    {% set html = UI.saveAndCloseButton() %}
    {% if resource_granted('szkla_products.product_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({ 'html': html }) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
        'entity':      form.vars.value,
        'indexPath':   path('szkla_products.products_index'),
        'indexLabel': 'Products'|trans,
        'entityTitle': form.vars.value.sku
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'Product'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block stats %}
    <li>{{ 'ID #'|trans }}: {{ form.vars.value.id ? form.vars.value.id : 'N/A'}}</li>
    <li>{{ 'oro.ui.created_at'|trans }}: {{ form.vars.value.createTime ? form.vars.value.createTime|oro_format_datetime : 'N/A' }}</li>
    <li>{{ 'oro.ui.updated_at'|trans }}: {{ form.vars.value.modifyTime ? form.vars.value.modifyTime|oro_format_datetime : 'N/A' }}</li>
{% endblock stats %}

{% block content_data %}
    {% set id = 'product-edit' %}

    {% set dataBlocks = [{
            'title': 'General'|trans,
            'class': 'active',
            'subblocks': [{
                'title': '',
                'data': [
                    form_row(form.sku),
                    form_row(form.isActive),
                    form_row(form.integerValues),
                    form_row(form.decimalValues),
                    form_row(form.datetimeValues),
                    form_row(form.varcharValues),
                    form_row(form.textValues),
                ]
            }]
        }]
    %}
    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}
